<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MyOwnCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.myowncard.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/giza"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="Here I Am , This Is Me"
        android:textColor="#cd1126"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@id/c"
        android:fontFamily="serif"
        android:text="There's "
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/a"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif"
        android:text="No Where"
        android:textColor="#c09301"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/c"
        android:fontFamily="serif"
        android:text=" Else On"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="Earth I'd Rather Be"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>